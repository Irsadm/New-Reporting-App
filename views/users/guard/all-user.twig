{% extends 'templates/default.twig' %}

{% block title %}List Anak{% endblock %}

{% block current %}List Anak{% endblock %}

{% block content %}


<div class="panel panel-default">
    <a class="list-group-item active main-color-bg">
      <span align="center" aria-hidden="true">
          <i class="icon-file"></i></span> Daftar anggota {{group.name}}
    </a>
    <div class="panel-body">
        {% for user in data %}

        <div style="padding:5px;" class="col-md-6" >
            <div class="well dash-box" style="background:#f2f2f2; padding-bottom:60px;">
                {% if user.image != null %}
                    <img style="margin-right:17px;" width="140" height="140" alt="User"
                    src="{{ base_url() }}/assets/images/{{ user.image }}">
                {% else %}
                    <img style="margin-right:17px;" width="140" height="140" alt="User"
                    src="{{ base_url() }}/assets/images/avatar.png">
                {% endif %}

                <span style="float: right; top: 1px; ">
                    <div class="btn-group span4">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-sort-desc" aria-hidden="true"></i>
                    </a>
                    <ul style="left: -140px; top: 13px; " class="dropdown-menu">
                        <li><a href="#"><i class="icon-fixed-width icon-pencil">
                             Lihat detail</i></a></li>
                        <li><a href="{{ path_for('item.archive', {'id': user.id }) }}"><i class="icon-fixed-width icon-pencil">
                             Lihat arsip laporan</i></a></li>
                        <li class="divider"></li>
                        <li><a href="#"><i class="i"> Hapus anak</i></a></li>
                    </ul>
                </div>
                </span>
                <span style="position: absolute; float: right; margin-right:33px; font-family: Franklin Gothic Medium;">
                    <h4>{{ user.name}} ({{ user.username }})</h4>
                    <b>Email: </b> {{ user.email}}<br>
                    <b>Telepon: </b> {{ user.phone}}<br>
                    <b>Alamat: </b> {{ user.address}}<br>
                    <b>Terdaftar: </b> {{ user.created_at | date("j F Y ") }}
                </span>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
