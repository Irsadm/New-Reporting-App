
{% extends 'templates/default.twig' %}

{% block title %} {{ items.name }} {% endblock %}

{% block current %} Detail Tugas {% endblock %}

{% block content %}
<div class="widget-box" style="margin-top:0px; background:#fff;">
    <a class="list-group-item active main-color-bg">
        <span class="" aria-hidden="true">Lihat item</span>
    </a>
    <div style="padding:20px; background:#fff;" class="widget-content">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th width="30%">Nama</th>
                    <td>{{ items.name}}</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th width="30%">Perulangan</th>
                    <td>{{ items.recurrent}}</td>
                </tr>
                <tr>
                    <th width="30%">Ditugaskan untuk</th>
                    <td>
                        {% if items.user_id == "" %}
                        Semua anggota {{items.group_name}}
                        {% else %}
                        {% for user in member %}
                        {% if user.id == items.user_id %}
                        {{ user.username}}
                        {% endif %}
                        {% endfor %}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th width="30%">Deskripsi</th>
                    <td>{{ items.description}}</td>
                </tr>
                <tr>
                    <th width="30%">
                        <a href="{{ base_url()}}/pic/items/delete/{{ items.id}}">
                            <button type="button" class="btn btn-sm btn-danger" name="button">Hapus</button></a>
                    </th>
                    <td>
                        <a data-toggle="modal" data-target="#edit">
                            <button type="button" class="btn btn-sm btn-primary" name="button">Sunting</button></a>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="article-post">
            <div class="widget-content"><br>
                {% if items.image is iterable %}
                    {% for image in items.image %}
                    <div class="span3" style="margin-left:0px;">
                    <center><a href="" data-toggle="modal" data-target="#imgModal">
                        <img height="200px" style="max-width: 250px;"
                    src="{{ base_url() }}/assets/images/{{ image }}"> </a><br>
                    <a href="{{path_for('delete.item.image',{'image': image})}}">
                     <span class="label label-danger">hapus</span> </a></center>
                </div>
                {% endfor %}
                {% elseif items.image is null %}
                {% else %}
                <div class="span3">
                <center><a href="" data-toggle="modal" data-target="#imgModal">
                    <img height="200px" style="max-width: 300px;"
                src="{{ base_url() }}/assets/images/{{ items.image }}"></a><br>
                <a href="{{path_for('delete.item.image',{'image': items.image})}}">
                 <span class="label label-danger">hapus</span></a></center>
                </div>
                {% endif %}
                <div class="span8">
                    <hr style="border-top: 4px double #8c8b8b;">
                </div>
                <div class="row">
                    <div style="margin:0px 15px 0px 5px;" class="col-md-12">
                        <div class="container-fluid" style="margin-top:0px;">
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="widget-box" style="margin-top:0px;">
                                        <div class="widget-content nopadding">
                                            <ul class="recent-posts">
                                                {% for comment in comment %}
                                                <li>
                                                    <div class="user-thumb">
                                                        {% if comment.image != null %}
                                                        <img width="40" height="40" src="{{ base_url() }}/assets/images/{{ comment.image }}"
                                                        onerror=this.src="{{ base_url() }}/assets/images/avatar.png">
                                                        {% else %}
                                                        <img width="40" height="40" src="{{ base_url() }}/assets/images/avatar.png">
                                                        {% endif %}
                                                    </div>
                                                    <div class="article-post">
                                                        <div class="fr">
                                                            <a href="{{path_for('pic.delete.comment', {id:comment.comment_id})}}" class="tip-top" title="Hapus komentar">
                                                                <i class="icon-remove"></i></a></div>
                                                        <span class="user-info"><b>{{ comment.username }} </b>
                                                            &nbsp {{ comment.created_at }} </span>
                                                        <p>{{ comment.comment }}</p>
                                                    </div>
                                                </li>
                                                {% endfor %}
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
                <div class="chat-message well">
                    <form action="{{path_for('pic.post.comment')}}" method="post">
                        <span class="input-box">
                            <input type="hidden" name="item_id" value="{{ items.id }}" />
                            <input type="text" name="comment" style="width:80%" id="msg-box" />
                            <button class="btn btn-success">Kirim komentar</button>
                        </span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="edit" role="dialog">
  <div class="modal-dialog">
    <div style="padding-left:20px;" class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
            <h3 class="modal-title" id="lineModalLabel">Sunting tugas</h3>
        </div>
        <div class="modal-body">

        <!-- content goes here -->
        <form  action="{{ path_for('item.update')}}"
         method="POST" enctype="multipart/form-data">
            {% if errors %}
            <div class="alert alert-danger">
                <a class="close" data-dismiss="alert" href="#">x</a>
                Mohon mengisi form dengan benar
            </div>
            {% endif %}
            <div class="row">
                <div class="col-xs-12 col-sm-4 col-md-5">
                    <div class="form-group {{ errors.name ? 'has-error' : '' }}">
                        <label for="name">Nama :</label>
                        <input type="text" name="name" value="{{items.name}}" class="form-control">
                        {% if errors.name %}
                        <span class="help-block">{{ errors.name | first }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-7">
                    <div class="form-group {{ errors.description ? 'has-error' : '' }}">
                        <label for="description">Deskripsi :</label>
                        <input type="text" name="description" value="{{items.description}}"class="form-control">
                        {% if errors.description %}
                        <span class="help-block">{{ errors.description | first }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-5 col-md-5">
                    <div class="form-group {{ errors.privacy ? 'has-error' : '' }}">
                        <label for="privacy">Privasi :</label>
                        <select class="form-control" name="privacy" >
                            <option value="">Pilih</option>
                            <option {% if items.privacy == 0 %}
                             selected="selected"{% endif %}value="0">Public</option>
                            <option {% if items.privacy == 1 %}
                             selected="selected"{% endif %} value="1">Privat</option>
                        </select>
                        {% if errors.public %}
                        <span class="help-block">{{ errors.privacy | first }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-7">
                    <div class="form-group {{ errors.recurrent ? 'has-error' : '' }}">
                        <label for="recurrent">Perulangan :</label>
                        <select class="form-control" name="recurrent" value="">
                            <option value="">Tanpa Perulangan</option>
                            <option {% if items.recurrent == "harian" %}
                             selected="selected"{% endif %} value="harian">Harian</option>
                            <option {% if items.recurrent == "mingguan" %}
                             selected="selected"{% endif %} value="mingguan">Mingguan</option>
                            <option {% if items.recurrent == "bulanan" %}
                             selected="selected"{% endif %} value="bulanan">Bulanan</option>
                            <option {% if items.recurrent == "tahunan" %}
                             selected="selected"{% endif %} value="tahunan">Tahunan</option>
                        </select>
                        {% if errors.recurrent %}
                        <span class="help-block">{{ errors.recurrent | first }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-5 col-md-5">
                    <div class="form-group {{ errors.start_date ? 'has-error' : '' }}">
                        <label for="start_date">Tanggal dimulai :</label>
                        <input type="date" name="start_date" value="{{items.start_date}}" class="form-control">
                        <input type="hidden" name="group" value="{{ group.id }}">
                        {% if errors.start_date %}
                        <span class="help-block">{{ errors.start_date | first }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-7">
                    <div class="form-group {{ errors.user_id ? 'has-error' : '' }}">
                        <label for="recurrent">Ditugaskan untuk :</label>
                        <select class="form-control" name="user_id" >
                            <option value="">Semua Anggota</option>
                            {% for member in member %}
                            <option {% if items.user_id == member.id %}
                             selected="selected"{% endif %} value="{{ member.id}}">{{member.username}}</option>
                            {% endfor %}
                        </select>
                        {% if errors.user_id %}
                        <span class="help-block">{{ errors.user_id | first }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-5 col-md-12">
                    <div class="form-group {{ errors.image ? 'has-error' : '' }}">
                        <label for="image">Tambahkan foto :</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-image"></i>
                            </div>
                            <input type="file" id="file" class="form-control"
                            name="image" placeholder="Item image">
                        </div>
                        <i>*kosongkan jika tidak ingin menambah foto</i>
                        {% if errors.image %}
                        <span class="help-block">{{errors.image | first}}</span>
                        {% endif %}<br />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-danger"
                         data-dismiss="modal" role="button">Tutup</button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-primary btn-hover-green" onClick="myFunction()">Simpan</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
  </div>
</div>
</div>

<div class="modal fade" id="imgModal" role="dialog">
  <div class="modal-dialog" style=" margin: auto; width: auto;">
    <!-- Modal content-->
    <div style="border-bottom:0px;" class="modal-header">
        <button style="color:#bffbf3; font-size: 17px; opacity:0.7" type="button" class="close"
        data-dismiss="modal" aria-hidden="true">Tutup(x)</button>
    </div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            {% if items.image is iterable %}
            {% for key, image in items.image %}
            <li data-target="#myCarousel" data-slide-to="{{key}}" class="active"></li>
            {% endfor %}
            {% elseif items.image != null %}
            <li data-target="#myCarousel" data-slide-to="0"></li>
            {% endif %}
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner"
        style="margin:auto; max-width:82%; max-height:75%; border:3px solid #cfd0ce;">
        {% if items.image is iterable %}
        {% for key, image in items.image %}
        <div class="item {% if key == 0 %} active{% endif %}">
            <center>
                <img src="{{ base_url() }}/assets/images/{{ image }}"
                alt="{{items.name}}" style="width:auto; max-height:650px">
            </center>
        </div>
        {% endfor %}
        {% elseif items.image != null %}
        <div class="item {% if items.name == 0 %} active{% endif %}">
            <center>
                <img src="{{ base_url() }}/assets/images/{{ items.image }}"
                alt="{{items.name}}" style="width:auto; max-height:650px">
            </center>
        </div>
        {% endif %}

    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
</div>
</div>


{% endblock %}
