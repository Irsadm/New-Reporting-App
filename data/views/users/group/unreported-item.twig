{% extends 'templates/default.twig' %}

{% block title %} Group {% endblock %}

{% block current %} Group {{group.name}} > Item belum dilaporkan{{error_item}} {% endblock %}
{% block script %}
{% if errors.description %}
<script type="text/javascript">
$('#{{error_item}}').modal('show');
</script>
{% endif %}
{% endblock %}
{% block content %}
<div class="row-fluid">
    <div class="span12">
        <div class="widget-box" style="margin-top:0px;">
            <div style="background:#ffffff" class="">
                <div style="padding:0px; background:#24272E;" class="panel-heading">
                    <div class="widget-title span12">
                        <div class="btn-group btn-group-justified">
                            <a href="#" class="btn btn-primary active">Belum dilaporkan</a>
                          <a href="{{ path_for('reported.item.user.group') }}" class="btn btn-primary">Dilaporkan</a>
                       </div>
                   </div>
            </div>
                <div class="panel-body" style="padding-top:0px;">
                    <div class="widget-content tab-content">
                        <div id="tab1" class="tab-pane active">
                            <span style="float:right; margin-top:5px;">
                                <div class="btn-group span6">
                                    <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                                        <i class="icon-collapse"></i>Lainnya &nbsp<i class="fa fa-sort-desc" aria-hidden="true"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a style="font-size: medium" href="#" data-toggle="modal" data-target="#create">
                                            <i class="">Buat tugas</i></a>
                                        </li>
                                        <li><a style="font-size: medium" href="{{path_for('get.group.member')}}">
                                            <i class="">Detail grup</i></a></li>
                                    </ul>
                                </div>
                            </span>
                        <div class="widget-box">
                            <h4><i class="fa" aria-hidden="true">
                                &nbsp {% if login.id == user.id %}Tugas saya di
                                 {% else %}
                                 Tugas {{user.username}} di
                             {% endif %} {{ group.name}} </i></h4>
                          <div class="widget-content nopadding">
                            <table class="table table-striped table-bordered">
                              <thead>
                                <tr>
                                  <th>No</th>
                                  <th>Nama</th>
                                  <th>Batas lapor</th>
                                  <th>Tindakan</th>
                                </tr>
                              </thead>
                              <tbody>
                                  {% for key, item in data %}
                                  <tr>
                                      <td class="taskDesc">
                                          {{ (pagination.current - 1) * pagination.perpage + (key + 1) }}</td>
                                      <td class="taskDesc">
                                          <a href="{{ base_url() }}/item/show/{{item.id}}">
                                           {{ item.name }}</a><span style="float:right;">
                                               {% if item.recurrent != null %}
                                          ({{ item.recurrent }}){% endif %}
                                           </span>
                                       </td>
                                       <td><center> {{item.end_date | date('j-M-Y') }}</center></td>
                                      <td class="taskOptions">
                                          <a class="btn btn-success" href="" data-toggle="modal" data-target="#{{item.id}}"
                                          value="{{item.id}}"title="Laporkan"
                                          style="margin-bottom:7px">
                                           <i class="fa fa-check-circle"></i>
                                      </a>
                                      {% if item.creator == login.id %} &nbsp&nbsp&nbsp
                                      <a class="btn btn-danger" href="{{ path_for('pic.delete.item', {'id': item.id})}}"
                                       value="{{item.id}}"title="Hapus tugas">
                                       <i class="fa fa-trash-o fa-lg"></i></a>
                                       {% endif %}
                                  </td>
                              </tr>
                              {% endfor %}
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
      {% if data == null %}
      <center><h4>Tidak ada data</h4></center><hr>
      {% else %}
      <nav aria-label="...">
          <ul class="pager">
              <div class="pagination">
                  <ul>
                      {% if pagination.current > 1 %}
                      <li><a href="{{ base_url() }}/user/groups?page={{ pagination.current - 1 }}">
                              Sebelumnya</a></li>
                      {% endif %}
                      <li class="active"> <a>{{ pagination.current }}</a></li>
                      {% if pagination.current < pagination.total_page %}
                      <li><a href="{{ base_url() }}/user/groups?page={{ pagination.current + 1 }}">
                              Selanjutnya</a></li>
                      {% endif %}
                  </ul>
              </div>
          </ul>
      </nav>
      {% endif %}
  </div>
  </div>
</div>
</div>
</div>

<!-- line modal items-->
<div class="modal fade" id="create" role="dialog">
  <div class="modal-dialog">
    <div style="padding-left:20px;" class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">Ã—</span><span class="sr-only">Tutuo</span></button>
            <h3 class="modal-title" id="lineModalLabel">Buat kiriman di {{group.name}}</h3>
        </div>
        <div class="modal-body">

        <!-- content goes here -->
        <form  action="{{ path_for('user.create.item')}}"
         method="POST" enctype="multipart/form-data">
            {% if errors %}
            <div class="alert alert-danger">
                <a class="close" data-dismiss="alert" href="#">x</a>
                Mohon mengisi form dengan benar
            </div>
            {% endif %}
            <div class="row">
                <div class="col-xs-12 col-sm-4 col-md-5">
                    <div class="form-group {{ errors.name ? 'has-error' : '' }}">
                        <label for="name">Nama :</label>
                        <input style="text-transform: capitalize;" type="text"
                         name="name" value="{{old.name}}" class="form-control">
                        {% if errors.name %}
                        <span class="help-block">{{ errors.name | first }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-7">
                    <div class="form-group {{ errors.description ? 'has-error' : '' }}">
                        <label for="description">Deskripsi :</label>
                        <input style="text-transform: capitalize;" type="text"
                        name="description" value="{{old.description}}"class="form-control">
                        {% if errors.description %}
                        <span class="help-block">{{ errors.description | first }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-5 col-md-5">
                    <div class="form-group {{ errors.privacy ? 'has-error' : '' }}">
                        <label for="privacy">Privasi :</label>
                        <select class="form-control" name="privacy" >
                            <option {% if old.privacy == 0 %}
                             selected="selected"{% endif %}value="0">Publik</option>
                            <option {% if old.privacy == 1 %}
                             selected="selected"{% endif %} value="1">Privat</option>
                        </select>
                        {% if errors.public %}
                        <span class="help-block">{{ errors.privacy | first }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-7">
                    <div class="form-group {{ errors.image ? 'has-error' : '' }}">
                        <label for="image">Foto :</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-image"></i>
                            </div>
                            <input type="file" id="file" class="form-control"
                            name="image" placeholder="Item image">
                        </div>
                        {% if errors.image %}
                        <span class="help-block">{{errors.image | first}}</span>
                        {% endif %}<br />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-5 col-md-5">
                    <div class="form-group {{ errors.start_date ? 'has-error' : '' }}">
                        <input type="hidden" name="recurrent" value="">
                        <input type="hidden" name="start_date" value="{{"now"|date("Y-m-d")}}">
                        <input type="hidden" name="group" value="{{ group.id }}">
                        {% if errors.start_date %}
                        <span class="help-block">{{ errors.start_date | first }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                    <div class="btn-group" role="group">
                        <input type="hidden" id="data-id" name="user_id"
                         value="{{ user.id }}">
                         <input type="hidden" id="data-id" name="member"
                          value="{{ user.id }}">
                         <button type="button" class="btn btn-danger"
                         data-dismiss="modal" role="button">Tutup</button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-primary btn-hover-green" onClick="myFunction()">Buat</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
  </div>
</div>
</div>

{% for key, item in data %}

<div id="{{item.id}}" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content" style="padding-left:20px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">Ã—</span><span class="sr-only">Tutup</span></button>
                <h3 class="modal-title" id="lineModalLabel">Laporkan {{item.name}}</h3>
            </div>
            <div class="modal-body">

            <!-- content goes here -->
            <form  action="{{path_for('report.item', {item:item.id})}}"
            method="POST" enctype="multipart/form-data" id="laporkan">
                {% if errors %}
                <div class="alert alert-danger">
                    <a class="close" data-dismiss="alert" href="#">x</a>
                    Mohon mengisi form dengan benar
                </div>
                {% endif %}
                <div class="row" style="margin-left:45px;">
                    <div class="col-xs-12 col-sm-6 col-md-10">
                        <div class="form-group {{ errors.image ? 'has-error' : '' }}">
                            Foto :
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-image"></i>
                                </div>
                                <input type="file" id="file" class="form-control"
                                name="image" placeholder="foto">
                            </div>
                            {% if errors.image %}
                            <span class="help-block">{{errors.image | first}}</span>
                            {% endif %}<br />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="form-group {{ errors.description ? 'has-error' : '' }}">
                            <label for="description">Deskripsi :</label>
                            <textarea rows="5" name="description" class="form-control"
                            value="{{ item.description }}">{{ item.description }}</textarea>
                            <input type="hidden" id="data-id" name="item_id"
                             value="{{ item.id }}">
                             <input type="hidden" id="data-id" name="group_id"
                              value="{{ item.group_id }}">
                            {% if errors.description %}
                            <span class="help-block">{{ errors.description | first }}</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-danger"
                             data-dismiss="modal"  role="button"><b>Tutup</b></button>
                        </div>
                        <div class="btn-group" role="group">
                            <button type="submit" class="btn btn-success btn-hover-green">
                                <b>Laporkan</b></button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- line modal report -->

{% endfor %}

{% endblock %}
