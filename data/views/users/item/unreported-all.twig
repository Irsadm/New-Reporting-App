{% extends 'templates/default.twig' %}

{% block title %} Daftar tugas {% endblock %}

{% block current %} {{user.name}} > Item belum dilaporkan {% endblock %}
{% block script %}
{% if errors.description %}
<script type="text/javascript">
$('#{{error_item}}').modal('show');
</script>
{% endif %}
{% endblock %}
{% block content %}
<div class="row-fluid">
    <div class="span12">
        <div class="widget-box" style="margin-top:0px;">
            <div style="background:#ffffff" class="">
                <div style="padding:0px; background:#24272E;" class="panel-heading">
                    <div class="widget-title span12">
                        <div class="btn-group btn-group-justified">
                            <a href="#" class="btn btn-primary active">Belum dilaporkan</a>
                          <a href="{{ path_for('reported.item.user') }}" class="btn btn-primary">Dilaporkan</a>
                       </div>
                   </div>
               </div>
                <div class="panel-body" style="padding:0px;">
                    <div class="widget-content tab-content">
                        <div id="tab1" class="tab-pane active">
                            <span style="float:right; margin-top:5px;">
                                <a class="btn btn-primary" href="{{ path_for('item.archive', {'id': user.id }) }}">
                                    <i class="icon-collapse"></i>Arsip laporan
                                </a>
                            </span>
                        <div class="widget-box">
                            <h4><i class="fa" aria-hidden="true">
                                &nbsp Daftar {% if login.id == user.id %}tugas saya
                                 {% else %}
                                 Tugas {{user.username}}
                             {% endif %} </i></h4>
                          <div class="widget-content nopadding">
                            <table class="table table-striped table-bordered">
                              <thead>
                                <tr>
                                  <th>No</th>
                                  <th>Nama</th>
                                  <th>Grup</th>
                                  <th>Batas lapor</th>
                                  {% if user.id == login.id  %}
                                  <th>Tindakan</th>
                                  {% endif %}
                                </tr>
                              </thead>
                              <tbody>
                                  {% for key, item in data %}
                                  <tr>
                                      <td>
                                          {{ (pagination.current - 1) * pagination.perpage + (key + 1) }}</td>
                                      <td>
                                          <a href="{{ base_url() }}/item/show/{{item.id}}" title="Lihat lebih detail">
                                           {{ item.name }}</a><span style="float:right;">
                                               {% if item.recurrent != null %}
                                          ({{ item.recurrent }}){% endif %}
                                           </span>
                                       </td>
                                       <td><center>{{item.grup}}</center></td>
                                       <td><center>
                                       {% if item.end_date is null %}
                                       -
                                       {% else %}
                                       {{item.end_date | date('j-M-Y') }}</center></td>
                                       {% endif %}
                                       {% if user.id == login.id  %}
                                      <td>
                                          <center>
                                          <a href="" class="btn btn-success"  data-toggle="modal"
                                           data-target="#{{item.id}}" value="{{item.id}}"
                                           title="Laporkan {{item.name}}" style="font-size: 17px">
                                           <i class="fa fa-check-circle"></i>
                                       </a>
                                  </center>
                                  </td>
                                  {% endif %}
                              </tr>
                              {% endfor %}
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
      {% if data == null %}
      <center><h4>Tidak ada data</h4></center><hr>
      {% else %}
      <nav aria-label="...">
          <ul class="pager">
              <div class="pagination">
                  <ul>
                      {% if pagination.current > 1 %}
                      <li><a href="{{ base_url() }}/user/item/all-unreported?page={{ pagination.current - 1 }}">
                              Sebelumnya</a></li>
                      {% endif %}
                      <li class="active"> <a>{{ pagination.current }}</a></li>
                      {% if pagination.current < pagination.total_page %}
                      <li><a href="{{ base_url() }}/user/item/all-unreported?page={{ pagination.current + 1 }}">
                              Selanjutnya</a></li>
                      {% endif %}
                  </ul>
              </div>
          </ul>
      </nav>
      {% endif %}
  </div>
  </div>
</div>
</div>
</div>

 {% for key, item in data %}

<div id="{{item.id}}" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" style="padding-left:20px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">Ã—</span><span class="sr-only">Tutup</span></button>
                <h3 class="modal-title" id="lineModalLabel">Laporkan {{item.name}}</h3>
            </div>
            <div class="modal-body">

            <form  action="{{path_for('report.item', {item:item.id})}}"
            method="POST" enctype="multipart/form-data" id="laporkan">
                {% if errors %}
                <div class="alert alert-danger">
                    <a class="close" data-dismiss="alert" href="#">x</a>
                    Mohon mengisi form dengan benar
                </div>
                {% endif %}
                <div class="row" style="margin-left:45px;">
                    <div class="col-xs-12 col-sm-6 col-md-10">
                        <div class="form-group {{ errors.image ? 'has-error' : '' }}">
                            Foto :
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-image"></i>
                                </div>
                                <input type="file" id="file" class="form-control"
                                name="image" placeholder="foto">
                            </div>
                            {% if errors.image %}
                            <span class="help-block">{{errors.image | first}}</span>
                            {% endif %}<br />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="form-group {{ errors.description ? 'has-error' : '' }}">
                            <label for="description">Deskripsi :</label>
                            <textarea style="text-transform: capitalize;" rows="5"
                             name="description" class="form-control"
                            value="{{ item.description }}">{{ item.description }}</textarea>
                            <input type="hidden" id="data-id" name="item_id"
                             value="{{ item.id }}">
                             <input type="hidden" id="data-id" name="group_id"
                              value="{{ item.group_id }}">
                             <input type="hidden" id="data-id" name="user_item"
                              value="1">
                            {% if errors.description %}
                            <span class="help-block">{{ errors.description | first }}</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-danger"
                             data-dismiss="modal"  role="button"><b>Tutup</b></button>
                        </div>
                        <div class="btn-group" role="group">
                            <button type="submit" class="btn btn-success btn-hover-green">
                                <b>Laporkan</b></button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{% endfor %}

{% endblock %}
