
{% extends 'templates/default.twig' %}

{% block title %} {{ items.name }} {% endblock %}

{% block current %} Lihat detail tugas {% endblock %}

{% block content %}
<div class="widget-box" style="margin-top:0px; background:#fff;">
    <a class="list-group-item active main-color-bg">
        <span class="" aria-hidden="true">Lihat tugas</span>
    </a>
    <div style="padding:20px; background:#fff;" class="widget-content">
        <!-- <ul style="padding-left:10px;" class="recent-posts"> -->
        <div style="font-size:15px; margin: 0px 40px 5px 0px" class="user-thumb">
            {% if items.reported_at == null and items.creator_image != null %}
            <img width="60" height="60" alt="User"
            src="{{ base_url() }}/assets/images/{{ items.creator_image }}">
            {% elseif items.reported_at != null and items.user_image != null %}
            <img width="60" height="60" alt="User"
            src="{{ base_url() }}/assets/images/{{ items.user_image }}">
            {% else %}
            <img width="60" height="60" alt="User"
            src="{{ base_url() }}/assets/images/avatar.png">
            {% endif %}
        </div>
        <span class="user-info" style="margin-left: 20px; font-size:14px;">
            <br>
            {% if items.reported_at == null  %}
            <b>
                {% if items.creator == login.username %}
                Anda
                {% else %}
                {{ items.creator }}
                {% endif %}</b>
                <i>membuat item di grup</i>
                {% else %}
                <b>
                    {% if items.user == login.username %}
                    Anda
                    {% else %}
                    {{ items.user }}
                    {% endif %}</b>
                    <i>melaporkan item di grup</i>
                    {% endif %}
                </span>

                <div class="article-post">
                    <p style="font-size: 10pt; margin-left: 80px;"><i class="fa fa-clock-o" aria-hidden="true">
                    {{ items.updated_at | date('j F Y | H:i')}}</i></p>
                    <br>
                    {% if items.reported_at == null %}
                    <span style="font-size: 14pt; color:#4467B9;" class="user-info"> <b>
                    <!-- <span class="label label-warning"> -->
                    {{ items.name }}
                        <!-- </span> -->
                        &nbsp <i class="fa fa-caret-right" aria-hidden="true"> </i> &nbsp
                        <a style="color:#4467B9;" href="{{ path_for('enter.group', {'id': items.group_id})}}"
                        title="Masuk ke grup {{ items.group_name }}">
                        <!-- <span class="label label-success"> -->
                        {{ items.group_name }}
                        <!-- </span> -->
                    </b></a>
                    </span>
                    {% else %}
                    <span style="font-size: 14pt; color:#4467B9;" class="user-info"> <b>
                        <!-- <span class="label label-warning"> -->
                        {{ items.name }}
                        <!-- </span> -->
                        &nbsp <i class="fa fa-caret-right" aria-hidden="true"> </i> &nbsp
                        <a style="color:#4467B9;" href="{{ path_for('enter.group', {'id': items.group_id})}}"
                        title="Masuk ke grup {{ items.group_name }}">
                        <!-- <span class="label label-success"> -->
                        {{ items.group_name }}
                        <!-- </span> -->
                    </b></a>
                    </span>
                    {% endif %}
                    <br>
                    <br>
                    <p>
                        {{ items.description }}
                    </p>
                </div>
                <div class="article-post">
                    <div class="widget-content">
                        {% if items.image is iterable %}
                        {% for image in items.image %}
                        <a href="" data-toggle="modal" data-target="#imgModal">
                            <img height="200px" style="max-width: 300px;"
                            src="{{ base_url() }}/assets/images/{{ image }}">
                        </a>
                        {% endfor %}
                        {% else %}
                        <a href="" data-toggle="modal" data-target="#imgModal">
                            <img height="200px" style="max-width: 300px;"
                            src="{{ base_url() }}/assets/images/{{ items.image }}">
                        </a>
                        {% endif %}
                        <hr style="border-top: 4px double #8c8b8b;">
                        <div class="row">
                            <div style="margin:0px 15px 0px 5px;" class="col-md-12">
                                <div class="container-fluid" style="margin-top:0px;">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="widget-box" style="margin-top:0px;">
                                                <div class="widget-content nopadding">
                                                    <ul class="recent-posts">
                                                        {% for comment in comment %}
                                                        <li>
                                                            <div class="user-thumb">
                                                                {% if comment.image != null %}
                                                                <img width="40" height="40" src="{{ base_url() }}/assets/images/{{ comment.image }}"
                                                                onerror=this.src="{{ base_url() }}/assets/images/avatar.png">
                                                                {% else %}
                                                                <img width="40" height="40" src="{{ base_url() }}/assets/images/avatar.png">
                                                                {% endif %}
                                                            </div>
                                                            <div class="article-post">
                                                                <span class="user-info"><b>{{ comment.username }} </b>
                                                                &nbsp {{ comment.created_at }} </span>
                                                                <p>{{ comment.comment }}</p>
                                                            </div>
                                                        </li>
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="chat-message well">
                            <form action="{{path_for('post.comment')}}" method="post">
                                <span class="input-box" style="margin-right:0px;">
                                    <input type="hidden" name="item_id" value="{{ items.id }}" />
                                    <input type="text" name="comment" style="margin-right:0px; width:83%" id="msg-box" />
                                    <button style="" class="btn btn-success">Kirim komentar</button>
                                </span>
                            </form>
                        </div>
                    </div>
                </div>
            <!-- </ul> -->
        </div>
    </div>

<div class="modal fade" id="imgModal" role="dialog">
    <div class="modal-dialog" style=" margin: auto; width: auto;">

        <!-- Modal content-->
        <div style="border-bottom:0px;" class="modal-header">
            <button style="color:#bffbf3; font-size: 17px; opacity:0.7" type="button" class="close"
             data-dismiss="modal" aria-hidden="true">Tutup(x)</button>
        </div>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                {% if items.image is iterable %}
                {% for key, image in items.image %}
                <li data-target="#myCarousel" data-slide-to="{{key}}" class="active"></li>
                {% endfor %}
                {% elseif items.image != null %}
                <li data-target="#myCarousel" data-slide-to="0"></li>
                {% endif %}
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner"
            style="margin:auto; max-width:82%; max-height:75%; border:3px solid #cfd0ce;">
            {% if items.image is iterable %}
            {% for key, image in items.image %}
            <div class="item {% if key == 0 %} active{% endif %}">
                <center>
                    <img src="{{ base_url() }}/assets/images/{{ image }}"
                    alt="{{items.name}}" style="width:auto; max-height:650px">
                </center>
            </div>
            {% endfor %}
            {% elseif items.image != null %}
            <div class="item {% if items.name == 0 %} active{% endif %}">
                <center>
                    <img src="{{ base_url() }}/assets/images/{{ items.image }}"
                    alt="{{items.name}}" style="width:auto; max-height:650px">
                </center>
            </div>
            {% endif %}
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
</div>

{% endblock %}
