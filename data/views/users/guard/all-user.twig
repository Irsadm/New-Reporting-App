{% extends 'templates/default.twig' %}

{% block title %}Daftar Anak{% endblock %}

{% block current %}Daftar Anak{% endblock %}

{% block content %}

<div class="panel panel-default">
    <a class="list-group-item active main-color-bg">
      <span align="center" aria-hidden="true">
          <i class="icon-file"></i></span> Daftar anak saya
    </a>
    <div class="panel-body">
        <div>
            <a class="btn btn-mini btn-bitbucket pull-right"
            href="{{ path_for('guard.search', {'search': 1 })}}">
            <i class="fa fa-plus"></i>&nbsp; Tambahkan anak</a>
        </div><hr>

        {% for user in data %}
        <div style="padding:5px;" class="col-md-4" >
            <div class="well dash-box" style="background:#f2f2f2; height: auto; padding:20px 20px 20px 20px;">
            <center>
                <a href="{{ path_for('get.user.item', {'id': user.id }) }}">
                {% if user.image != null %}
                    <img style="margin-right:17px;" width="146" height="146" alt="Foto"
                    src="{{ base_url() }}/assets/images/{{ user.image }}" onerror=this.src="{{ base_url() }}/assets/images/avatar.png">
                {% else %}
                    <img style="margin-right:17px;" width="146" height="146" alt="Foto"
                    src="{{ base_url() }}/assets/images/avatar.png">
                {% endif %}
            </a>
                <span style="float: right; top: 1px; ">
                    <div class="btn-group">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-sort-desc" aria-hidden="true"></i>
                    </a>
                    <ul style="left: -140px; top: 13px; " class="dropdown-menu">
                        <li><a style="font-size: small" href="{{ path_for('guard.delete.user', {'id': user.id }) }}"><i class="i"> Hapus anak</i></a></li>
                    </ul>
                </div>
                </span>
                <span style="margin-right:33px; font-family: Franklin Gothic Medium;">
                    <h4>{{ user.name}} ({{ user.username }})</h4>
                </center>
                    <span class="span1"><b>Email</span></b> {{ user.email}}<br>
                    <span class="span1"><b>Telepon</span></b> {{ user.phone}}<br>
                    <span class="span1"><b>Terdaftar</span></b> {{ user.created_at | date("j F Y ") }}
                </span>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
