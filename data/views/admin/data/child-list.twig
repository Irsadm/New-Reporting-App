{% extends 'admin/template/app.twig' %}
{% block title %} Admin - Guardian{% endblock %}
{% block current %}
    Wali list
{% endblock %}
{% block content %}
<div class="panel panel-primary">
    <div class="panel-heading main-color-bg">
        <h3 class="panel-title">Daftar Anak</h3>
    </div>
    <div class="panel-body">
    <div class="col-xs-12">
    <a href=""><button class="btn btn-primary" style="border-radius:10%">
        <i class="fa fa-user-plus"></i> Tambah Anak</button></a>
      <div class="table-responsive">
    <br>
        <table  class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>No</th>
              <th>Nama</th>
              <th>Jenis Kelamin</th>
              <th>Email</th>
              <th>No telepon</th>
              <th>Alamat</th>
              <th class="col-md-1">Option</th>
            </tr>
          </thead>
          <tbody>
            {% for key, user in data %}
            <tr>
                <td> {{ key + 1 + (pagination.perpage * (pagination.current - 1)) }}</td>
                <td>
                    <a href="" data-toggle="modal" data-target="#{{user.id}}" style="color:green" value="{{member.id}}" title="Lihat detail">
                    {% if user.name is null %}
                    {{ user.username }}
                    {% else %}
                    {{ user.name }}
                    {% endif %}</a>
                </td>
                <td> {{ user.gender }} </td>
                <td> {{ user.email }} </td>
                <td> {{ user.phone }} </td>
                <td> {{ user.address }} </td>
                <td>
                <a href="" style="color:red"  data-toggle="tooltip" data-placement="top" title="delete"><i class="fa fa-times"></i></a>
                <a href="" style="color:#179FFC" data-toggle="tooltip" data-placement="top" title="Update"><i class="fa fa-pencil"></i></a>
                <a href="" style="color:green" data-toggle="tooltip" data-placement="top" title="View detail"><i class="fa fa-eye"></i></a></td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
    </div><!--end of .table-responsive-->
</div>

{% if data == null %}
<center><h4>Tidak ada data</h4></center><hr>
{% else %}
<nav aria-label="...">
    <ul class="pager">
        <div class="pagination">
            {% if pagination.current > 1 %}
            <li><a href="{{ base_url() }}/admin/group/{{group_id}}/members?page={{ pagination.current - 1 }}">
                Sebelumnya</a></li>
                {% endif %}
                <li class="active"> <a>{{ pagination.current }}</a></li>
                {% if pagination.current < pagination.total_page %}
                <li><a href="{{ base_url() }}/admin/group/{{group_id}}/members?page={{ pagination.current + 1 }}">
                    Selanjutnya</a></li>
                    {% endif %}
                </div>
            </ul>
        </nav>
        {% endif %}
    </div>
</div>

{% for user in data %}
<div class="modal fade" id="{{user.id}}" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                <h3 class="modal-title" id="lineModalLabel">Detail Anak</h3>
            </div>
            <div class="modal-body">
                <!-- modal content -->
                {% if user.image != null %}
                <center><img width="30%" alt="User"
                    src="{{ base_url() }}/assets/images/{{ user.image }}"
                    onerror=this.src="{{ base_url() }}/assets/images/avatar.png"></center>
                {% else %}
                <center><img width="30%" alt="User"
                    src="{{ base_url() }}/assets/images/avatar.png"></center>
                {% endif %}
                <br>
                <b><span class="span2"> Nama </span></b>
                {{user.name}}<br>
                <b><span class="span2"> Username </span></b>
                {{user.username}} <br>
                <b><span class="span2"> Jenis Kelamin </span></b>
                {{user.gender}} <br>
                <b><span class="span2"> Email </span></b>
                {{user.email}} <br>
                <b><span class="span2"> Nomor Telepon </span></b>
                {{user.phone}} <br>
                <b><span class="span2"> Alamat </span></b>
                {{user.address}} <hr>
            </div>
        </div>
    </div>
</div>
{% endfor %}

{% endblock %}
